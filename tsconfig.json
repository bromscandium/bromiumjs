{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@bromscandium/runtime",
    "paths": {
      "@bromscandium/core": ["./packages/core/src"],
      "@bromscandium/runtime": ["./packages/runtime/src"],
      "@bromscandium/router": ["./packages/router/src"],
      "@bromscandium/vite-plugin": ["./packages/vite-plugin/src"],
      "bromium": ["./bromium/src"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/runtime" },
    { "path": "./packages/router" },
    { "path": "./packages/vite-plugin" },
    { "path": "./bromium" }
  ]
}
